<%- include("../partials/header") %>

<title> Add Flight </title>

<h1> Enter a New Event or Task </h1>

<form action="/flights" method="POST" autocomplete="off">
    
    <label>Airline:
        <select name="airline">
            <option value="American">American</option>
            <option value="Southwest">SouthWest</option>
            <option value="United">United</option>
        </select>
    </label><br>

    <label>Airport:
        <select name="airport">
            <option value="AUS">Austin</option>
            <option value="DFW">Dallas/Fort Worth</option>
            <option value="DEN">Denver</option>
            <option value="LAX">Los Angeles</option>
            <option value="SAN">San Diego</option>
        </select>
    </label><br>

    <label>Flight Number:
        <input type="number" name="flightNo">
    </label><br>

    <label>Departure:
        <input type="date" name="departs" min="10" max="9999">
    </label><br>

    <button type="submit">Add New Flight</button>

</form>

<p>
    <%= errorMsg %>
</p>

<%- include("../partials/footer") %>